sudo pacman -Syu
sudo pacman -S zsh
mkdir ~/.fonts
rm -r ~/.config/i3/config
cp ~/not-available/i3/config ~/.config/i3/
rm -r ~/.zshrc
cp ~/not-available/.zshrc ~/.zshrc
sudo pacman -S neofetch
sudo rm -r /etc/i3status.conf
sudo cp ~/not-available/i3status.conf /etc/

echo "Installation has finished If you using i3 please logout and login."
